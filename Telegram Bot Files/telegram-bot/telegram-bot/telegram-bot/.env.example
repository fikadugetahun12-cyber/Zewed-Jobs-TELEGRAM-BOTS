# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_IDS=123456789,987654321  # Telegram user IDs separated by commas

# Database Configuration
DB_HOST=localhost
DB_NAME=zewedjobs_admin
DB_USER=root
DB_PASS=yourpassword
DB_PORT=3306

# Web Dashboard
SECRET_KEY=your-secret-key-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Bot Settings
BOT_NAME=ZewedJobs Bot
BOT_USERNAME=@zewedjobs_bot
BOT_DESCRIPTION=Ethiopian Job Portal Bot
BOT_SHORT_DESCRIPTION=Find your dream job in Ethiopia

# Job Settings
DEFAULT_JOB_LIMIT=10
MAX_JOBS_PER_USER=5
APPLICATION_COOLDOWN_HOURS=24

# Notification Settings
DAILY_ALERT_TIME=09:00
JOB_EXPIRY_DAYS=30
CLEANUP_INTERVAL_DAYS=7

# API Keys (optional)
GOOGLE_API_KEY=your_google_api_key
MAPS_API_KEY=your_maps_api_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Webhook Settings (for production)
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PORT=8443
WEBHOOK_LISTEN=0.0.0.0

# SSL Certificate (for webhook)
SSL_CERT=path/to/cert.pem
SSL_PRIV=path/to/private.key
